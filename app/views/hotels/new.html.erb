<% provide(:title, 'Add new hotel') %>
 <%= form_for(@hotel, :html => { :multipart => true}) do |f| %>

      <%= f.label :title %>
      <%= f.text_field :title %>

      <%= f.label :breakfast%>
      
      <%= f.radio_button :breakfast, "false" %>No 
      <%= f.radio_button :breakfast, "true" %>Yes<br><br> 



      <%= f.label :price %>
      <%= f.text_field :price %> 

      <%= f.label :description, "Room description" %>
      <%= f.text_field :description %>  

<%= fields_for(@address) do |address| %>

      <%= address.label :country %>
      <%= address.text_field :country  %> 

      <%= address.label :state %>
      <%= address.text_field :state %> 

      <%= address.label :city %>
      <%= address.text_field :city %> 

      <%= address.label :street %>
      <%= address.text_field :street %> 
  

    <%end%>


<input name="hotel[raiting]" type="radio" class="star" checked="checked" value = "1"/>
<input name="hotel[raiting]" type="radio" class="star" value = "2"/>
<input name="hotel[raiting]" type="radio" class="star" value = "3"/>
<input name="hotel[raiting]" type="radio" class="star" value = "4" />
<input name="hotel[raiting]" type="radio" class="star" value = "5"/>


<%= f.file_field :photo %>
 
      
<%= f.submit "Add hotel" %>
<%end%>