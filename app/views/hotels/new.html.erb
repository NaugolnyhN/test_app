<% provide(:title, 'Add new hotel') %>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@hotel) do |f| %>

      <%= f.label :title %>
      <%= f.text_field :title %>

      <%= f.label(:breakfast, "Breakfast included?")%>
      <%= f.radio_button(:breakfast, "true") %>Yes
      <%= f.radio_button(:breakfast, "false") %>No <br><br>

      <%= f.label :price %>
      <%= f.text_field :price %> 

      <%= f.label :description, "Room description" %>
      <%= f.text_field :description %>    

     <%= form_for(@address) do |f| %>

      <%= f.label :country, "Country" %>
      <%= f.text_field :country  %> 

      <%= f.label :state %>
      <%= f.text_field :state %> 

      <%= f.label :city %>
      <%= f.text_field :city %> 

      <%= f.label :street %>
      <%= f.text_field :street %> 

    

      <%= f.submit "Add hotel", class: "btn btn-large btn-primary" %>
    <% end %>
    <% end %>
  </div>
</div>